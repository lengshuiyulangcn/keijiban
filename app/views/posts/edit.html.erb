<center><h3>投稿を再編集</h3></center>
<%= simple_form_for(@post, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :title, :input_html => { :class => "span6" }, label: 'タイトル: '%>
  <br>
  <%= f.input :tag, label: 'カテゴリ: '%>
  <br>
  <%= f.input :content, as: :text, label: 'コンテント: ', :input_html => { :class => "span6" }%>
  <br>
<%= f.input :auth, :as=> :boolean, :value=>1, label:'ユーザログイン必要'%>
  <br>
  <%= f.button :submit, '投稿', :class =>'btn-primary'%>
<% end %>
